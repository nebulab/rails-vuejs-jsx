<h4 class="my-4">Comments</h4>

<div class="row">
  <% if comments.any? %>
    <% comments.each do |comment| %>
      <div class="col-md-12 my-2">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= comment.title %></h5>
            <p class="card-text"><%= comment.description %></p>

            <%= form_for [product, comment], method: :delete do |form| %>
              <%= form.submit t('comments.form.delete'), class: 'btn btn-sm btn-danger' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-md-12">
      <p>
        <%= t('comments.empty') %>
      </p>
    </div>
  <% end %>
</div>
